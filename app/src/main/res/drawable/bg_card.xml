<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Card background -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Light shadow for card effect (only works pre-Lollipop in drawable) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
